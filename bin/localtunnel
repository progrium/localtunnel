base_dir = File.dirname(File.expand_path(__FILE__))

require base_dir + '/../lib/local_tunnel'
require base_dir + '/../lib/net_ssh_gateway_patch'

key = nil
options = OptionParser.new do |o|
  o.banner = "Usage: localtunnel [options] <localport>"
  o.on("-k", "--key FILE", "upload a public key for authentication") do |k|
    key = File.exist?(k.to_s) ? File.open(k).read : nil
  end
  o.on('-h', "--help", "show this help") { puts o; exit }
end

args = options.parse!
local_port = args[0]
unless local_port
  puts options
  exit
end

x = LocalTunnel.new(local_port, key)
x.register_tunnel
x.start_tunnel